{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    "index.ts",
    "knexfile.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "node_modules/",
    "node_modules/**/*",
    "dist"
  ]
}